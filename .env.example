# Contentstack Configuration
# Get these values from your Contentstack dashboard (CMS > Your Stack > Settings > Tokens)
NEXT_PUBLIC_CONTENTSTACK_API_KEY=your_stack_api_key_here
NEXT_PUBLIC_CONTENTSTACK_DELIVERY_TOKEN=your_delivery_token_here
NEXT_PUBLIC_CONTENTSTACK_PREVIEW_TOKEN=your_preview_token_here

# Contentstack Region (EU, US, AZURE_NA, AZURE_EU, GCP_NA)
# Free accounts are typically bound to EU region
NEXT_PUBLIC_CONTENTSTACK_REGION=EU

# Environment to fetch content from ('preview' is defined in the provided stack)
NEXT_PUBLIC_CONTENTSTACK_ENVIRONMENT=preview

# Enable live preview functionality
NEXT_PUBLIC_CONTENTSTACK_PREVIEW=true

# Personalize Configuration
# Get this from your Contentstack dashboard (Personalize > Your Project > Settings)
NEXT_PUBLIC_PERSONALIZATION_PROJECT_UID=your_personalize_project_uid_here

# Middleware Configuration
# IMPORTANT: Choose the right setting for your deployment:
# - Set to 'true' for local development and Vercel deployments
# - Set to 'false' for Contentstack Launch deployments (Launch uses the functions/[proxy].edge.js code to handle the same logic)
# WARNING: Running the Middleware AND and the functions/[proxy].edge.js both on Launch in our personalization use case will lead to conflicts, including unexpected caching behaviour too.
USE_NEXT_MIDDLEWARE=false

# Optional: Development Configuration
# NODE_ENV=development
